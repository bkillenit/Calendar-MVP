function event_popover(event_div, id) {
    //var event_id = "#event-" + id;

   jQuery.ajax({
                url: "/events/" + String(id),
                type: "GET",
                success: function(result){                      
                    $(event_div).popover({
   						placement: 'left',
   						html: true,
   						title: '',
   						content: result
   					});
   					
   					$(event_div).popover('show');
                },
                error: function(){
                    alert('Error occured');
                }
    });

}     