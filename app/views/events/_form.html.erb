<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Rounds the time to nearest fifteen minutes and makes local -->
  <% t = Time.new %>
  <% rounded_t = Time.local(t.year, t.month, t.day, t.hour, t.min/15*15) %>
  <% rounded_f = Time.local(t.year, t.month, t.day, t.hour+1, t.min/15*15) %>
  <!-------------------------------------------------------------------->

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :starts_at %><br />
    <%= f.datetime_select :starts_at, :default =>rounded_t %>
  </div>
  <div class="field">
    <%= f.label :ends_at %><br />
    <%= f.datetime_select :ends_at, :default=>rounded_f %>
  </div>
  <div class="field">
    <%= f.label :all_day %><br />
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
